@model List<ebookStore.Models.Book>

<h2>Manage Books</h2>

<div class="book-gallery">
    @foreach (var book in Model)
    {
        <div class="book-card">
            <img src="@book.CoverImagePath" alt="@book.Title" class="book-cover" />
            <div class="book-info">
                <h5>@book.Title</h5>
                <p><strong>Author:</strong> @book.AuthorName</p>
                <p><strong>Publisher:</strong> @book.Publisher</p>
                <p><strong>Genre:</strong> @book.Genre</p>
                <p><strong>Year:</strong> @book.YearOfPublish</p>
                <p><strong>Price (Buy):</strong> $@book.PriceBuy</p>
                <p><strong>Price (Borrow):</strong> $@book.PriceBorrowing</p>
            </div>
            <div class="admin-actions">
                <form asp-action="DeleteBook" method="post" class="action-form">
                    <input type="hidden" name="bookId" value="@book.ID" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <a asp-action="EditBook" asp-route-id="@book.ID" class="btn btn-primary">Edit</a>
                <a asp-action="ChangePrice" asp-route-id="@book.ID" class="btn btn-secondary">Change Price</a>
            </div>
        </div>
        
    }
</div>
<div class="modal fade" id="changePriceModal" tabindex="-1" aria-labelledby="changePriceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="changePriceModalLabel">Change Price</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="changePriceForm">
                    <input type="hidden" id="bookId" name="bookId" />
                    <div class="mb-3">
                        <label for="currentPrice" class="form-label">Current Price</label>
                        <input type="text" id="currentPrice" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label for="newPrice" class="form-label">New Price</label>
                        <input type="number" id="newPrice" name="newPrice" class="form-control" step="0.01" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Message"]</div>
}

<!-- Styling -->
<style>
    .book-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
    }

    .book-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        padding: 10px;
        text-align: center;
    }

    .book-cover {
        width: 100%;
        height: auto;
        max-height: 200px;
        object-fit: cover;
    }

    .book-info {
        margin-top: 10px;
        font-size: 14px;
    }

    .admin-actions {
        margin-top: 15px;
    }

    .admin-actions .btn {
        margin: 5px 0;
        display: block;
        width: 100%;
    }

    .action-form {
        display: inline-block;
        margin: 0;
    }
</style>
