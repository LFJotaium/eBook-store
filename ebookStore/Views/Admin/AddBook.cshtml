@model ebookStore.Models.Book

<h2>Add a New Book</h2>

<form asp-action="AddBook" method="post" enctype="multipart/form-data">
    <div>
        <label>Title:</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div>
        <label>Author Name:</label>
        <input asp-for="AuthorName" class="form-control" />
        <span asp-validation-for="AuthorName" class="text-danger"></span>
    </div>

    <div>
        <label>Publisher:</label>
        <input asp-for="Publisher" class="form-control" />
        <span asp-validation-for="Publisher" class="text-danger"></span>
    </div>

    <div>
        <label>Price (Buy):</label>
        <input asp-for="PriceBuy" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="PriceBuy" class="text-danger"></span>
    </div>

    <div>
        <label>Is Buy Only:</label>
        <input asp-for="IsBuyOnly" id="IsBuyOnly" class="form-check-input" />
        <span asp-validation-for="IsBuyOnly" class="text-danger"></span>
    </div>

    <div id="PriceBorrowingGroup">
        <label>Price (Borrow):</label>
        <input asp-for="PriceBorrowing" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="PriceBorrowing" class="text-danger"></span>
    </div>

    <div>
        <label>Year of Publish:</label>
        <input asp-for="YearOfPublish" type="number" class="form-control" />
        <span asp-validation-for="YearOfPublish" class="text-danger"></span>
    </div>

    <div>
        <label>Genre:</label>
        <input asp-for="Genre" class="form-control" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div>
        <label>Sold Copies:</label>
        <input asp-for="SoldCopies" type="number" class="form-control" />
        <span asp-validation-for="SoldCopies" class="text-danger"></span>
    </div>

    <div>
        <label>Is Popular:</label>
        <input asp-for="IsPopular" class="form-check-input" />
        <span asp-validation-for="IsPopular" class="text-danger"></span>
    </div>

    <div>
        <label>Age Limit:</label>
        <input asp-for="AgeLimit" type="number" class="form-control" />
        <span asp-validation-for="AgeLimit" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="CoverImagePath">Cover Image Link</label>
        <input asp-for="CoverImagePath" class="form-control" />
        <span asp-validation-for="CoverImagePath" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Files">Files Drive Path</label>
        <input asp-for="Files" class="form-control" />
        <span asp-validation-for="Files" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Add Book</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Message"]</div>
}

@section Scripts {
    <script>
        document.getElementById("IsBuyOnly").addEventListener("change", function () {
            var priceBorrowingGroup = document.getElementById("PriceBorrowingGroup");
            if (this.checked) {
                priceBorrowingGroup.style.display = "none";
            } else {
                priceBorrowingGroup.style.display = "block";
            }
        });

        // Initialize the visibility of the PriceBorrowing field based on the initial state of IsBuyOnly
        document.addEventListener("DOMContentLoaded", function () {
            var isBuyOnly = document.getElementById("IsBuyOnly").checked;
            var priceBorrowingGroup = document.getElementById("PriceBorrowingGroup");
            priceBorrowingGroup.style.display = isBuyOnly ? "none" : "block";
        });
    </script>
}