@model ebookStore.Models.Book

<h2>Edit Book</h2>

<form asp-action="EditBook" method="post">
    <input type="hidden" asp-for="ID" />
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="AuthorName"></label>
        <input asp-for="AuthorName" />
        <span asp-validation-for="AuthorName"></span>
    </div>
    <div>
        <label asp-for="Publisher"></label>
        <input asp-for="Publisher" />
        <span asp-validation-for="Publisher"></span>
    </div>
    <div>
        <label asp-for="PriceBuy"></label>
        <input asp-for="PriceBuy" type="number" step="0.01" />
        <span asp-validation-for="PriceBuy"></span>
    </div>
    <div>
        <label asp-for="PriceBorrowing"></label>
        <input asp-for="PriceBorrowing" type="number" step="0.01" />
        <span asp-validation-for="PriceBorrowing"></span>
    </div>
    <div>
        <label asp-for="YearOfPublish"></label>
        <input asp-for="YearOfPublish" type="number" />
        <span asp-validation-for="YearOfPublish"></span>
    </div>
    <div>
        <label asp-for="Genre"></label>
        <input asp-for="Genre" />
        <span asp-validation-for="Genre"></span>
    </div>
    <div>
        <label asp-for="CoverImagePath"></label>
        <input asp-for="CoverImagePath" />
        <span asp-validation-for="CoverImagePath"></span>
    </div>
    <button type="submit">Save Changes</button>
</form>
