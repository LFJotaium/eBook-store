@model IEnumerable<ebookStore.Models.Book>

<h1>Books</h1>

<table class="table">
    <thead>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Publisher</th>
        <th>Price to Buy</th>
        <th>Price to Borrow</th>
        <th>Year of Publish</th>
        <th>Genre</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.AuthorName</td>
            <td>@book.Publshier</td>
            <td>@book.PriceBuy</td>
            <td>@book.PriceBorrowing</td>
            <td>@book.YearOfPublish</td>
            <td>@book.Genre</td>
        </tr>
    }
    </tbody>
</table>
